{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "sourceMap": true,
    "listFiles": false,
    "traceResolution": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "diagnostics": false,
    "strict": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "es2017"],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "./typings/*", "*"]
    }
  },
  "include": ["./typings/*", "src/**/*.*"],
  "exclude": ["node_modules/**", "./dist"]
}
